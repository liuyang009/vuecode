.header {
  width: 100%;
  height: 80rpx;
  background-color: #d3d3d3;
  font-size: 24rpx;
  color: #666;
  padding: 0 20rpx;
  line-height: 80rpx;
}

.radio-item {
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
  height: 100rpx;
  font-size: 30rpx;
  border-bottom: 2rpx solid #d3d3d3;
  line-height: 100rpx;
}

.footer {
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80rpx;
}

 .footer view{
  width: 100%;
  height: 80rpx;
  border-right: 2rpx solid #D3D3D3;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: green;
} 
.footer-line{
  width: 20%;
  border-top: 6rpx solid green;
}